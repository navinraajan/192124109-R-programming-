# Function to convert Kelvin to Celsius
kelvin_to_celsius <- function(kelvin) {
  celsius <- kelvin - 273.15
  return(celsius)
}

# Example usage
kelvin_temperature <- 300 # Replace with your Kelvin temperature value
celsius_temperature <- kelvin_to_celsius(kelvin_temperature)
print(celsius_temperature)

# Function to convert Celsius to Kelvin
celsius_to_kelvin <- function(celsius) {
  kelvin <- celsius + 273.15
  return(kelvin)
}

# Example usage
celsius_temperature <- 25 # Replace with your Celsius temperature value
kelvin_temperature <- celsius_to_kelvin(celsius_temperature)
print(kelvin_temperature)
